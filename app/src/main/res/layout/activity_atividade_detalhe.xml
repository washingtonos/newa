<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#718093"
    android:layout_gravity="center"
    tools:context=".AtividadeDetalheActivity">

    <TextView
        android:text="Nome"
        android:gravity="center"
        android:layout_width="85dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/edtNomeAtividade"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <TextView
        android:textAlignment="center"
        android:gravity="center"
        android:text="Descrição"
        android:textColor="#000000"
        android:layout_marginTop="50dp"
        android:layout_width="85dp"
        android:layout_height="40dp" />

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/edtDescAtividade"
        android:gravity="center"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <TextView
        android:layout_marginTop="100dp"
        android:textColor="#000000"
        android:gravity="center"
        android:text="Responsavel"
        android:textAlignment="center"
        android:layout_width="85dp"
        android:layout_height="40dp" />

    <TextView
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:id="@+id/edtResponsavelAtividade"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <TextView
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:text="OBS"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <EditText
        android:shadowColor="@color/colorButtonSecondary"
        android:id="@+id/edtObsAtividade"
        android:layout_marginTop="190dp"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:inputType="text"
        android:hint="Obs para a tarefa..."
        android:layout_height="90dp" />

    <Button
        android:id="@+id/btn_concluir_atividade"
        android:layout_marginTop="280dp"
        android:textAllCaps="false"
        android:text="Concluir Atividade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>