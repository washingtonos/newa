<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c8adb"
    tools:context=".CadastrarComodoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="20dp"
        android:background="#ffff"
        >
        <android.support.design.widget.TextInputLayout
            style="@style/StyledTilEditText"
            android:id="@+id/txt_input_nomeComodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome Comodo"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btn_cadastrar_grupo_imp"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_input_nomeComodo"
            android:textAllCaps="false"
            android:text="Cadastrar Comodo"
            android:background="@drawable/buttonshape"
            android:textColor="#ffff"
            android:layout_marginTop="10dp"
            android:onClick="cadastrarComodo"
            />

    </RelativeLayout>

</RelativeLayout>